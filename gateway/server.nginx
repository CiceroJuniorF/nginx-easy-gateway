server {
    listen 80;
    server_name localhost;

    location /m1 {
        auth_request /auth;
        proxy_pass http://backend1;
    }

    location /m2 {
        auth_request /auth;
        proxy_pass http://backend2;
    }

    location = /auth {
        internal;
        proxy_pass http://auth-service;
        proxy_pass_request_body off;
        proxy_set_header Content-Length "";
        proxy_set_header X-Original-URI $request_uri;
    }
}